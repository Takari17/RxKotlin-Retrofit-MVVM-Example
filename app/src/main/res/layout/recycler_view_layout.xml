<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" app:cardElevation="16dp"
        android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.518" android:textSize="30sp" android:layout_marginTop="72dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textAllCaps="false" android:textStyle="bold" android:id="@+id/textView5"
                android:text="Identity"/>
        <TextView
                android:text="Id: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_view" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:textSize="24sp"/>
        <TextView
                android:text="Company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
                android:id="@+id/textView3" android:textSize="30sp" android:layout_marginTop="180dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.468"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                android:textSize="30sp"
                android:layout_marginTop="116dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintHorizontal_bias="0.529" android:textStyle="bold" android:id="@+id/textView4"
                android:text="Contact Information"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_view"
                app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="16dp"
                android:text="Name:"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textSize="18sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name_view" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/name_view"
                app:layout_constraintStart_toStartOf="@+id/name_view"
                android:text="UserName:"
                android:textSize="18sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_view"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:text="Email:" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textSize="18sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_view"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/email_view"
                app:layout_constraintStart_toStartOf="@+id/email_view"
                android:text="Phone:" android:textSize="18sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/website_view"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/phone_view"
                app:layout_constraintStart_toStartOf="@+id/phone_view"
                android:text="Website:" android:textSize="18sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/company_name_view"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:text="Company Name" android:textSize="18sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/catch_phrase_view" tools:text="Catch Phrase"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/company_name_view"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>